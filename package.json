{
  "name": "fusion-action-app-publish",
  "version": "0.0.2",
  "description": "GitHub Action to authenticate & publish Fusion apps using fusion-framework-cli",
  "main": "action.yml",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:auto": "bash scripts/validate-inputs.sh auto ./dist '' client-id tenant-id https://fusion.equinor.com pr",
    "test:token": "bash scripts/validate-inputs.sh fqa ./dist token123 '' '' ''",
    "test:install-cli": "bash scripts/install-cli.sh ^13.0.0",
    "test:build": "bash scripts/build-app.sh .",
    "test:metadata": "bash scripts/extract-metadata.sh .",
    "test:resolve-env": "bash scripts/resolve-environment.sh ci pr",
    "test:auth": "bash scripts/authenticate.sh '' client-id tenant-id https://fusion.equinor.com",
    "test:publish-dry": "echo 'Dry run - would execute: bash scripts/publish-app.sh dist latest .'",
    "test:orchestrator": "bash scripts/fusion-publish.sh --help",
    "validate-example": "bash scripts/validate-inputs.sh fprd ./dist token123 '' '' ''",
    "lint": "echo 'No linting configured yet'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinor/fusion-action-app-publish.git"
  },
  "keywords": [
    "fusion",
    "equinor",
    "github-action",
    "deployment",
    "publish",
    "azure",
    "fusion-framework"
  ],
  "author": "Equinor Fusion Core",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/equinor/fusion-action-app-publish/issues"
  },
  "homepage": "https://github.com/equinor/fusion-action-app-publish#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "files": [
    "action.yml",
    "scripts/*.sh",
    "scripts/README.md",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0"
  }
}