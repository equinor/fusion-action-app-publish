{
  "name": "fusion-action-app-publish",
  "version": "0.1.18",
  "description": "GitHub Action to authenticate & publish Fusion apps using fusion-framework-cli",
  "main": "action.yml",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "format": "biome format --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest --run --coverage",
    "test:local": "ALLOW_LOCAL_TESTS=true vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --no-frozen-lockfile && pnpm run build",
    "version": "changeset version && pnpm install --no-frozen-lockfile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinor/fusion-action-app-publish.git"
  },
  "keywords": [
    "fusion",
    "equinor",
    "github-action",
    "deployment",
    "publish",
    "azure",
    "fusion-framework"
  ],
  "author": "Equinor Fusion Core",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/equinor/fusion-action-app-publish/issues"
  },
  "homepage": "https://github.com/equinor/fusion-action-app-publish#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0"
  },
  "files": [
    "action.yml",
    "scripts/*.sh",
    "scripts/README.md",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@testing-library/jest-dom": "^6.1.5",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
